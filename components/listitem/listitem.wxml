<!--components/listitem/listitem.wxml-->
<view class="list-item" bind:tap="goDetail" data-id="{{item.id}}}">
	<view class="left">
		<image class="item-banner" lazy-load="true" src="{{item.banner}}" mode="scaleToFill"></image>
	</view>
	<view class="right">
		<view class="name">
			{{item.name}}
		</view>
		<view class="intro">
			{{item.intro}}
		</view>
		<view class="sale-and-price">
			<view class="saled">
				销量：{{item.saled}}
			</view>
			<view class="price">
				￥{{item.price}}
			</view>
		</view>
	</view>
</view>