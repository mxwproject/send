/* components/listitem/listitem.wxss */
.list-item {
	margin-top: 30rpx;
	box-shadow: 0rpx 2rpx 16rpx 0 rgba(53,53,53,0.2);
	height: 200rpx;
	border-radius: 12rpx;
	display: flex;
	flex-direction: row;
}

.item-banner {
	width: 240rpx;
	height: 200rpx;
}

.list-item .left {
	border-radius: 12rpx;
	overflow: hidden;
}

.right {
	padding: 20rpx;
	overflow: hidden;
}

.list-item .name {
	width: 390rpx;
	color: #353535;
	font-size: 26rpx;
	font-weight: 700;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}

.list-item .intro {
	width: 390rpx;
	color: #888;
	font-size: 24rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	margin: 20rpx 0 30rpx 0;
}

.list-item .sale-and-price {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.list-item .saled {
	color: #353535;
	font-size: 24rpx;
}

.list-item .price {
	font-size: 32rpx;
	color: #FF0000;
	font-weight: 700;
}