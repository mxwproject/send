page {
  background-color: #F1F2F3;
}
.base-content {
	background-color: #FFF;
}

.order {
	padding-bottom: 120rpx;
}

.order-info {
	padding: 0 20rpx;
	padding-bottom: 15rpx;
	margin-bottom: 20rpx;
}
.space-item {
	display: flex;
	justify-content: space-between;
}
.gword {
	padding: 15rpx 0;
	font-size: 26rpx;
	color: #888;
}
.tourline {
	font-size: 30rpx;
	font-weight: 700;
	padding: 10rpx 20rpx;
	text-align: center;
}
.start-end {
	display: flex;
	flex-direction: row;
	justify-content: center;
	padding: 20rpx 0;
	font-size: 28rpx;
	font-weight: bold;
}
.countt {
	border-bottom: 1rpx solid #888;
	padding-bottom: 2rpx;
	font-size: 24rpx;
	color: #888;
	margin: 0 26rpx;
}
.red-money {
	color: #FF0000;
	font-weight: bold;
}
.traveller-info {
	padding: 40rpx 0;
	/*margin-bottom: 150rpx;*/
}
.contacter {
	border-bottom: 1rpx solid #888;
	padding: 0 60rpx;
}
.travellers {
	padding: 0 60rpx;
	padding-top: 40rpx;
}
.ctitle {
	font-size: 30rpx;
	font-weight: bold;
}
.ct-line {
	font-size: 27rpx;
	color: #353535;
	margin: 30rpx 0;
}
.t-list {
	font-size: 27rpx;
	color: #353535;
	margin: 30rpx 0;
}
.t-item {
	margin: 35rpx 0;
	display: flex;
	flex-direction: row;
}
.order-number {
	padding-right: 50rpx;
	padding-top: 5rpx;
}
.o-n {
	color: #70AAF4;
	border: 1rpx solid #70AAF4;
	border-radius: 50%;
	width: 25rpx;
	height: 25rpx;
	text-align: center;
	line-height: 25rpx;
	font-size: 24rpx;
}
.t-item .t-detail {
	display: flex;
	flex-direction: column;
	font-size: 26rpx;
}
.t-item .t-detail view {
	margin: 10rpx 0;
}
.cc-contact {
	width: 100%;
	height: 100rpx;
	background-color: #70AAF4;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 200;
	overflow: hidden;
	margin-top: 20rpx;
}
.cs_button {
	height: 100%;
	opacity: 0;
	z-index: 100;
}
.contact-tip {
	color: #FFF;
	position: absolute;
	left: 0;
	top: 0;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 100%;
	font-size: 34rpx;
}
.cc-icon {
	width: 44rpx;
	height: 44rpx;
	margin-right: 20rpx;
}

.remark-wrap {
	margin-top: 20rpx;
	background-color: #FFF;
	padding: 20rpx 0;
	padding-left: 60rpx;
}

.remark {
	font-size: 27rpx;
	color: #353535;
	margin-top: 10rpx;
}

.back-index {
	padding-top: 80rpx;
	font-size: 26rpx;
	color: #70AAF4;
	text-align: center;
}