/* pages/orderlist/orderlist.wxss */
page {
	background-color: #F1F2F3;
}

.list {
	padding: 0 30rpx 40rpx 40rpx;
}

.item {
	padding-top: 50rpx;
	box-sizing: border-box;
}

.date {
	color: #FFF;
	background-color: #70AAF4;
	font-size: 26rpx;
	border-radius: 40rpx;
	width: 250rpx;
	padding: 5rpx 0;
	text-align: center;
	margin-bottom: 30rpx;
}

.card {
	width: 100%;
	height: 260rpx;
	border-radius: 10rpx;
	box-shadow: 0 2rpx 16rpx 0 rgba(53,53,53,0.2);
	background-color: #FFF;
	display: flex;
	flex-direction: row;
	overflow: hidden;
}

.img {
	width: 40%;
	height: 100%;
	/*overflow: hidden;*/
}

.timage {
	width: 100%;
	height: 100%;
}

.detail {
	width: 60%;
	box-sizing: border-box;
	padding: 20rpx 40rpx 0 30rpx;
}

.name {
	width: 200rpx;
	font-size: 32rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}

.sdate {
	margin-top: 10rpx;
	font-size: 28rpx;
	color: #888;
}

.price {
	margin-top: 10rpx;
	font-size: 28rpx;
}

.price-text {
	color: #FF0000;
}

.options {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	margin-top: 18rpx;
	margin-left: 10rpx;
}

.delete {
	width: 110rpx;
	padding: 8rpx 0;
	border-radius: 30rpx;
	background-color: #F1F2F3;
	font-size: 28rpx;
	color: #000;
	display: flex;
	align-items: center;
	justify-content: center;
}

.view-detail {
	width: 150rpx;
	padding: 8rpx 0;
	border-radius: 30rpx;
	background-color: #70AAF4;
	font-size: 28rpx;
	color: #FFF;
	text-align: center;
	display: flex;
	align-items: center;
	justify-content: center;
}

.empty {
	font-size: 26rpx;
	color: #888;
	padding-top: 80rpx;
	text-align: center;
}