/* pages/mycenter/mycenter.wxss */

.avatar {
	width: 100%;
	text-align: center;
	padding: 40rpx 0 20rpx 0;
	border-bottom: 1rpx solid #F1F2F3;
}

.avatar-img {
	width: 150rpx;
	height: 150rpx;
	border: 1px solid #FFF;
	border-radius: 50%;
	display: block;
	margin: 0 auto;
	overflow: hidden;
	object-fit: cover;
}

.list {

}

.item {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	padding: 26rpx 40rpx;
}

.title {
	font-size: 28rpx;
	color: #353535;
	display: flex;
	align-items: center;
}

.title-icon {
	width: 44rpx;
	height: 44rpx;
	margin-right: 16rpx;
}

.arrow {
	display: flex;
	align-items: center;
}

.arrow-icon {
	width: 44rpx;
	height: 44rpx;
}
.wait-pay {
	font-size: 26rpx;
	color: #888;
	padding-right: 15rpx;
	position: relative;
}
.wait-pay:after {
	content: '';
	position: absolute;
	right: 3rpx;
	top: 0rpx;
	width: 8rpx;
	height: 8rpx;
	background-color: #FF0000;
	border-radius: 50%;
	border: 1rpx solid #FF0000;
}

.date {
	width: 240rpx;
	color: #FFF;
	background-color: #70AAF4;
	font-size: 26rpx;
	border-radius: 40rpx;
	padding: 3rpx 10rpx;
	text-align: center;
	margin-bottom: 20rpx;
}

.card {
	width: 95%;
	height: 220rpx;
	border-radius: 10rpx;
	box-shadow: 0 2rpx 16rpx 0 rgba(53,53,53,0.2);
	background-color: #FFF;
	display: flex;
	flex-direction: row;
	overflow: hidden;
}

.img {
	width: 660rpx;
	height: 100%;
	overflow: hidden;
}

.timage {
	width: 100%;
	height: 100%;
}

.detail {
	box-sizing: border-box;
	padding: 15rpx 15rpx 0 15rpx;
	position: relative;
	overflow: hidden;
}

.name {
	width: 100%;
	font-size: 26rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}

.sdate {
	margin-top: 10rpx;
	font-size: 24rpx;
	color: #888;
}

.options {
	width: 100%;
	height: 55rpx;
	line-height: 50rpx;
	margin-top: 10rpx;
	font-size: 26rpx;
	color: #888;
	position: absolute;
	bottom: 0;
	left: 15rpx;
	padding: 0rpx 20rpx 0 0;
	border-top: 1rpx solid #f1f1f1;
	overflow: hidden;
}

.success {
	float: left;
}

.order {
	padding: 40rpx 0 40rpx 40rpx;
	background-color: #F1F2F3;
	display: flex;
	flex-direction: row;
}

.view-detail {
	float: right;
	color: #70AAF4;
	padding-right: 30rpx;
	overflow: hidden;
}

.more {
	width: 160rpx;
	height: 214rpx;
	margin-top: 65rpx;
	color: #FFF;
	background-color: #70AAF4;
	font-size: 26rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	border-top-left-radius: 20rpx;
	border-bottom-left-radius: 20rpx;
}